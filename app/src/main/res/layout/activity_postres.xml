<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Postres">


    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="409dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_burgermenu"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/burger_menu" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/cart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="154dp"
        android:layout_columnSpan="2"
        android:layout_marginStart="26dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="372dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <!-- Imagen -->
        <ImageView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dulate_postres" />


        <!-- Contenedor para el título, el texto breve y el botón -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="139dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del bloque 1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Texto breve -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto breve del bloque 1"
                android:textSize="14sp" />

            <!-- Espacio entre elementos -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- Botón "Comprar" -->
            <Button
                android:id="@+id/btnComprar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Comprar" /> <!-- Asigna un ID único a cada botón -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="313dp"
        android:background="@drawable/borde_negro"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ExtraText">>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>