<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesPostres">


    <!--HEADER-->

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="409dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_burgermenu"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/burger_menu" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/cart" />

    </LinearLayout>


    <!-- Primer bloque -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/spProductos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->
        <ImageView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/dulate_postres" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helado de vainilla"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del helado de vainilla"
            android:textSize="14sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $5.99"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio entre elementos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Botón "Comprar" -->
        <Button
            android:id="@+id/btnComprar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comprar" />
    </LinearLayout>

    <!-- Línea de separación -->
    <View
        android:id="@+id/spProductos"
        android:layout_width="1dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layoutHeader"
        app:layout_constraintStart_toEndOf="@+id/btnComprar1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling" />

    <!-- Segundo bloque (igual que el primero) -->
    <LinearLayout
        android:id="@+id/producto1"
        android:layout_width="153dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toEndOf="@+id/spProductos"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgProducto1"
            android:layout_width="149dp"
            android:layout_height="118dp"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/dulate_postres" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtProducto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helado de vainilla"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del bloque 2"
            android:textSize="14sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $7.99"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio entre elementos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Botón "Comprar" -->
        <Button
            android:id="@+id/btnComprar2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Comprar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/producto4"
        android:layout_width="149dp"
        android:layout_height="263dp"
        android:layout_gravity="center"
        android:layout_marginTop="388dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/spProductos"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgProducto4"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/dulate_postres" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtProducto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helado de chocolate"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del bloque 2"
            android:textSize="14sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $7.99"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio entre elementos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Botón "Comprar" -->
        <Button
            android:id="@+id/btnComprar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Comprar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/producto3"
        android:layout_width="149dp"
        android:layout_height="263dp"
        android:layout_gravity="center"
        android:layout_marginTop="388dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toEndOf="@+id/spProductos"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgProducto3"
            android:layout_width="149dp"
            android:layout_height="118dp"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/dulate_postres" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helado de vainilla"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del bloque 2"
            android:textSize="14sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $7.99"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio entre elementos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Botón "Comprar" -->
        <Button
            android:id="@+id/btnComprar4"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Comprar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/producto2"
        android:layout_width="153dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/spProductos"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgProducto2"
            android:layout_width="149dp"
            android:layout_height="118dp"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/dulate_postres" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtProducto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helado de frutilla"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del bloque 2"
            android:textSize="14sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $7.99"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Espacio entre elementos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Botón "Comprar" -->
        <Button
            android:id="@+id/btnComprar5"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="Comprar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>